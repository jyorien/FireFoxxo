{
    "manifest_version": 2,
    "name": "FireFoxxo",
    "version": "1.0",
  
    "description": "A cute fox that serves as your virtual assistant",
    "homepage_url": "https://github.com/jyorien/FireFoxxo",
  
    "permissions": [
      "activeTab",
      "storage",
      "search"
    ],

    "content_scripts": [
      {
        "matches": ["*://*/*"],
        "js": ["content_scripts/foxxo.js", "content_scripts/clipboard.js", "content_scripts/search.js"],
        "css": ["content_scripts/foxxo.css"]
      }
    ],

    "background": {
      "scripts": ["background_scripts/search.js"]
    },

    "browser_action": {
      "default_icon": "icons/foxxo.png",
      "default_title": "FireFoxxo",
      "default_popup": "popup/index.html"
    }
  }
  