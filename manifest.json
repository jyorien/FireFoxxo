{
    "manifest_version": 2,
    "name": "FireFoxxo",
    "version": "1.0",
  
    "description": "A cute fox that serves as your virtual assistant",
    "homepage_url": "https://github.com/mdn/webextensions-examples/tree/master/beastify",
  
    "permissions": [
      "activeTab",
      "storage",
      "search"
    ],
  
    "content_scripts": [
      {
        "matches": ["*://*/**"],
        "js": ["content_scripts/clipboard.js"]
      }
    ],

    "background": {
      "scripts": ["background_scripts/search.js"]
    },

    "browser_action": {
      "default_icon": "icons/foxxo.png",
      "default_title": "FireFoxxo",
      "default_popup": "popup/index.html"
    },

    "browser_specific_settings": {
      "gecko": {
        "id": "firefoxxo@example.com"
      }
    }
  }
  